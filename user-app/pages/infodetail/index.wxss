page{
    background: #ccc;
}
.info-item{
    width: 100%;
    height: 90rpx;
    display: flex;
    line-height: 90rpx;
    background: #fff;
    border-bottom: 1px solid #e4e4e4;
    position: relative;
}
.info-item input{
    width: 70%;
    height: 100%;
}
.info-item picker{
    width: 100%;
    height: 100%;
}
.item-label{
    height: 100%;
    margin-right: 20rpx;
    margin-left: 20rpx;
}
.icon-input{
    display:block;
    right:20px;
    position:absolute;
}
.info-item-area{
    width: 100%;
    height: auto;
    background: #fff;
    border-bottom: 1px solid #e4e4e4;
}
.info-item-area textarea{
    width: 90%;
    margin-left: 10px;
}
.item-type{
    display: block;
    width: 100%;
    padding: 20rpx 0;
    margin-left: 10px;
    border-bottom: 1px solid #e4e4e4;
}
.subInfo-btn{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}
.info-item checkbox-group{
    margin-left: 20rpx;
}
.ui-infos-box{
    margin-left: 20rpx;
    padding: 40rpx 0;
}