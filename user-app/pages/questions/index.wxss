
.question-main{
    display: flex;
    flex-direction: column;
    overflow: hidden;
}
.question-item{
    width: 100%;
    border-bottom: 1px solid #e4e4e4;
    margin-left: 10px;
    margin-top: 10px;
}
.radio-group{
    margin-left: 30px;
    margin-top: 10px;
    margin-bottom: 10px;
}
checkbox-group label{
    display: block;
}
.question-area{
    width: 90%;
}
.question-sub{
    width: 100%;
    height: 60px;
    line-height: 60px;
    font-size: 24px;
}

.radio-group label{
    padding: 0 5px;
}
checkbox-group label{
    margin-bottom: 5px;
}